<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.customer.dao.CustomerDao" >
    <sql id="BASE_TABLE">
    customer
  </sql>

    <sql id="BASE_COLUMN">
   ID,NAME,EMAIL,COUNTRY,CUSTOMERTYPE,LASTSENDDATE
  </sql>

    <insert id="insert" parameterType="com.customer.model.CustomerBean">
        INSERT INTO
        <include refid="BASE_TABLE"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            userName,password,
            <if test="phone != null">
                phone,
            </if>
        </trim>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            #{Name, jdbcType=VARCHAR},
            #{Email, jdbcType=VARCHAR},
            <if test="phone != null">
                #{Country , jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <select id="selectCustomers" resultType="com.customer.model.CustomerBean">
        SELECT
        <include refid="BASE_COLUMN"/>
        FROM
        <include refid="BASE_TABLE"/>
    </select>


</mapper>